@model List<WebApplication12.Models.Game>

<!DOCTYPE html>
<html>
<head>
    <title>Games</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #F0FFFF; 
            font-size: 20px;
            padding: 20px;
            text-align: center;
        }

        table {
            margin: auto;
            border: 4px solid #4682B4; 
            border-collapse: collapse;
            width: 80%;
        }

        th, td {
            border: 2px solid #4682B4; 
            padding: 12px;
            text-align: center; 
        }

        th {
            background-color: #87CEFA; 
            color: #fff; 
        }

        td {
            text-align: center; 
        }

        h1 {
            color: #4682B4; 
            margin-bottom: 30px; 
        }
    </style>
</head>
<body>

    <h1>Games</h1>
    @await Component.InvokeAsync("Games", Model)

    <h1>Weather</h1>
    @await Component.InvokeAsync("Weather", "Nice")

</body>
</html>

